package Arrays;

import java.util.Arrays;
import java.util.Scanner;

public class A2 {
    public static void main(String[] args) {
        Scanner in=new Scanner(System.in);
        System.out.print("Enter the number: ");
        int n=in.nextInt();
        int [] arr=new int[n];
        System.out.print("Enter the elements of the array: ");
        for(int i=0;i<n;i++){
            arr[i]=in.nextInt();
        }
        System.out.println(Arrays.toString(arr));
        //Largest and Second largest
        int max=arr[0];
        int smax=-1;
        for(int i=1;i<n;i++){
            if(arr[i]>max) {
                smax=max;
                max=arr[i];
            }
            else if(arr[i]<max && arr[i]>smax) smax=arr[i];//If only second largest is lesser than arr[i] than we will use this code
        }

        int min=arr[0];
        int smin=Integer.MAX_VALUE;
        for(int i=1;i<n;i++){
            if(arr[i]<min){
                smin=min;
                min=arr[i];
            }
            else if(arr[i]>min && arr[i]<smin) smin=arr[i];
        }
        System.out.println("The largest element in the array: "+max);
        if(smax==-1)System.out.print("The second largest element is not here");
        else System.out.println("The second largest element in the array: "+smax);

        System.out.println("The smallest element in the array: "+min);
        if(smin==Integer.MAX_VALUE)System.out.print("The second smallest element is not here");
        else System.out.println("The second smallest element in the array: "+smin);
        in.close();
    }
}
