package Recursion;

import java.util.Scanner;

public class R6 {
    public static void main(String[] args) {
        Scanner in=new Scanner(System.in);
        System.out.print("Enter the number:");
        int n=in.nextInt();
        int sum=r6(n);
        System.out.print(sum);
    }
    static int r6(int n){
        if(n==0) return 0;
        else return n+r6(n-1);
    }
}
